<% provide(:title, "Вход") %>
<h1>Вход</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.submit "Вход", class: "btn btn-primary" %>
    <% end %>

    <p>Новый пользователь? <%= link_to "Зарегистрируйся!", signup_path %></p>
  </div>
</div>